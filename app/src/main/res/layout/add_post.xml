<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="AddPost"
            type="com.dodo.urbanfarmer.AddViewModel" />
    </data>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/facebook" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:text="SaiSreedharChindukuru"
                    android:textColor="#000"
                    android:textSize="20dp" />
                <Spinner
                    android:id="@+id/Spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:prompt="@array/spinner_list"/>

            </LinearLayout>


        </LinearLayout>
        <FrameLayout
            android:id="@+id/Fragment_Container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="80dp"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <VideoView
                        android:id="@+id/ThoughtVideo"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>
                    <ImageView
                        android:id="@+id/ThoughtImage"
                        android:src="@drawable/ic_baseline_contact_support_24"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"/>


                    <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:text="@={AddPost.thoghText}"
                    android:gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:maxLines="10"
                    android:hint="Write your thoughts!!!" />

                </LinearLayout>
            </ScrollView>



        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4">

            <EditText
                android:id="@+id/Hashtag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="#Add hashtag"
                android:textColorHint="#0C0C0C"
                android:text="@{AddPost.Addhashtag}"
                android:textColor="#000"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:onClick="@{()->AddPost.AddThoughtPic(0)}"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_camera_alt_24" />

            <ImageView
                android:onClick="@{()->AddPost.AddThoughtPic(1)}"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_image_24" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{()->AddPost.getthoughtVideo(102)}"
                android:src="@drawable/ic_baseline_motion_photos_on_24" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:onClick="@{()->AddPost.uploadThoughData()}"
                android:src="@drawable/ic_baseline_more_horiz_24" />


        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>
