<?xml version="1.0" encoding="utf-8"?>
<Lincom/apk/res/android"
    xmlns:app="hearLayout xmlns:android="http://schemas.android.ttp://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorblue"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fanwood_text"
            android:gravity="center"
            android:text="Login"
            android:textColor="#E6DCDC"
            android:textSize="80dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="371dp"
        android:layout_height="289dp"
        android:layout_gravity="center">


        <EditText
            android:id="@+id/email"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="182dp"
            android:backgroundTint="#E5C09D"
            android:hint="USERNAME"
            android:inputType="textEmailAddress"
            android:textColor="#E5C09D"
            android:textColorHint="#E5C09D" />

        <EditText
            android:id="@+id/password"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="63dp"
            android:layout_marginBottom="111dp"
            android:backgroundTint="#E5C09D"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:textColor="#E5C09D"
            android:textColorHint="#E5C09D" />

        <Button
            android:id="@+id/login"
            android:layout_width="78dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="146dp"
            android:layout_marginBottom="33dp"
            android:background="#E5C09D"
            android:text="LOGIN"
            android:textColor="#111"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="22dp"
            android:text="Forgot Password?"
            android:textColor="#E5C09D"
            android:textSize="23dp" />

        <TextView
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="20dp"

            android:text="Register"
            android:textColor="#E5C09D"
            android:textSize="22dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/mobilenumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="Login with Phone Number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="71dp"
            android:layout_height="46dp"
            android:layout_below="@+id/mobilenumber"
            android:layout_alignParentEnd="true"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="161dp"
            android:gravity="center"
            android:text="or"
            android:textColor="#E6DCDC"
            android:textSize="40dp" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="14dp" />


    </RelativeLayout>


</LinearLayout>