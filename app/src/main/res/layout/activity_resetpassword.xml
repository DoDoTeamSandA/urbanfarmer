<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorblue"
    android:layout_height="match_parent"
    tools:context=".Resetpassword">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/border"
        android:text="Reset Password"
        android:textSize="45dp"
        android:gravity="center"
        android:fontFamily="@font/fanwood_text"
        android:textColor="@color/colorblue"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="269dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="576dp"
        android:backgroundTint="#E5C09D"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#E5C09D"
        android:textColorHint="#E5C09D" />

    <Button
        android:id="@+id/reverifybtn"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="134dp"
        android:layout_marginBottom="460dp"
        android:background="@drawable/border"
        android:text="verify"
        android:textColor="#111"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="once you click verify button you will get email,if you donot get please report us"
        android:textSize="20sp"
        android:textColor="#E5C09D"
        android:textStyle="bold" />


</RelativeLayout>