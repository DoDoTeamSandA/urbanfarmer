<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">#123</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlHighlight">#123</item>
        <item name="floatingActionButtonStyle">
            @style/floatingButton
        </item>

    </style>
    <style name="navigationTheme">
    <item name="colorPrimary">#123</item>
        <item name="colorControlHighlight">#123</item>

    </style>
    <style name="floatingButton">
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorAccent">#cc0033</item>

    </style>
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">#fff</item>
        <item name="android:textColor">#123</item>
    </style>
    <style name="NormalTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
